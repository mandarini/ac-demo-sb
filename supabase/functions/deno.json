{
  "imports": {
    "@supabase/functions-js/": "https://esm.sh/@supabase/functions-js@2.4.3/",
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2.45.4"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true,
    "experimentalDecorators": true
  },
  "lint": {
    "files": {
      "include": ["./**/*.ts"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["./**/*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
}